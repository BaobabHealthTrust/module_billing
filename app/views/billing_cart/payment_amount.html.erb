<style type="text/css">
  .long .options {
    height: 22em !important;
  }
</style>

<script language="javascript">
  tt_cancel_destination = '/add_to_cart?patient_id=<%= params[:patient_id] || @patient_id %>&user_id=<%= params[:user_id] || @user_id %>&location_id=<%= params[:location_id] || @location_id %>';
  tt_cancel_show = '/add_to_cart?patient_id=<%= params[:patient_id] || @patient_id %>&user_id=<%= params[:user_id] || @user_id %>&location_id=<%= params[:location_id] || @location_id %>';
</script>

<form action="/invoice_summary" method='post'>

  <label for="category_id">Enter Tendered Amount</label>
 
  <%= text_field_tag "tendered_amount", @total_amount.blank? ? "" :  sprintf('%.2f', @total_amount),
    {:id => "tendered_amount",
     :field_type => 'number',
     :helpText => "Tendered Amount"} %>

  <%= hidden_field_tag "user_id", (params[:id] || params[:user_id]) %>

  <%= hidden_field_tag "location_id", (params[:location_id] || @location_id ) %>

  <%= hidden_field_tag "patient_id",  (params[:patient_id] || @patient_id )  %>

  <%= hidden_field_tag "payment_method",  @payment_method %>

  <%= hidden_field_tag "invoice_total",  @invoice_total_amount %>

  <% if !params[:src].nil? %>
    <%= hidden_field_tag "src", "#{params[:src]}" %>
  <% end %>

  <%= submit_tag value ="Submit"%>

</form>