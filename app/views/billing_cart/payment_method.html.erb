<form action="/payment_amount" method='post'>
  
  <label for="category_id">Select Payment Method</label>
  <%= select_tag(:payment_method, options_for_select(@payment_methods.split(",").sort),
    :helpText => "Select Payment Method") %>
  
  <%= hidden_field_tag "user_id", (params[:id] || params[:user_id]) %>

  <%= hidden_field_tag "location_id", params[:location_id] %>

  <%= hidden_field_tag "patient_id",  params[:patient_id] %>

  <% if !params[:src].nil? %>
    <%= hidden_field_tag "src", "#{params[:src]}" %>
  <% end %>

  <%= submit_tag value ="Submit"%>

</form>