<script language="javascript">
  tt_cancel_destination = '/show_medical_scheme_providers?user_id=<%= params[:user_id] %>&location_id=<%=
params[:location_id] + (!params[:src].nil? ? "&src=#{params[:src]}" : "") %>';
  tt_cancel_show = '/show_medical_scheme_providers?user_id=<%= params[:user_id] %>&location_id=<%=
params[:location_id] + (!params[:src].nil? ? "&src=#{params[:src]}" : "") %>';
</script> padding-top: 10px;

<form action="/update_medical_scheme_provider" method='post'>
  <label for="provider_type">Provider Type</label>
  <%= select_tag(:provider_type, options_for_select(@provider_type_map, params[:provider_type]),
    :helpText => "Select Provider Type") %>

  <label for="company_name">Company Name</label>
  <%= text_field_tag(:company_name, @medical_scheme_provider.company_name, :helpText => "Company Name") %>

  <label for="company_address">Company Address</label>
  <%= text_area_tag(:company_address, @medical_scheme_provider.company_address, :helpText => "Company Address") %>

  <label for="phone_number_1">Phone Number 1</label>
  <%= text_field_tag(:phone_number_1, @medical_scheme_provider.phone_number_1, :helpText => "Phone Number 1", :field_type => 'number') %>

  <label for="phone_number_2">Phone Number 2</label>
  <%= text_field_tag(:phone_number_2, @medical_scheme_provider.phone_number_2, :helpText => "Phone Number 2", :field_type => 'number') %>

  <label for="email_address">Email Address</label>
  <%= text_field_tag(:email_address, @medical_scheme_provider.email_address, :helpText => "Email Address") %>

  <%= hidden_field_tag "user_id", "#{params[:id] || params[:user_id]}" %>

  <%= hidden_field_tag "location_id", "#{params[:location_id]}" %>

  <%= hidden_field_tag "medical_scheme_provider_id", "#{@medical_scheme_provider.medical_scheme_provider_id}" %>
  
  <% if !params[:src].nil? %>
    <%= hidden_field_tag "src", "#{params[:src]}" %>
  <% end %>

  <%= submit_tag value="Submit"%>

</form>
